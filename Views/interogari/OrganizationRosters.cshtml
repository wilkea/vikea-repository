@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Rostere per Organizație";
}

<div class="container mb-5">
    <h1 class="mb-4">Rostere per Organizație</h1>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12 mb-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">@item.Denumire</h5>
                    </div>
                    <div class="card-body">
                        <h6>Rostere:</h6>
                        <div class="list-group">
                            @foreach (var roster in item.Rostere)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong>Disciplina:</strong> @roster.Disciplina
                                        </div>
                                        <div>
                                            <strong>Data Formării:</strong> @roster.DataFormare.ToShortDateString()
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>