@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mb-5">
    <h1 class="display-4">Welcome to DPC League</h1>
    <p class="lead">Manage your esports organization and events.</p>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="management-links">
                <h2 class="mb-4">Management Options</h2>
                <ul class="list-unstyled">
                    <li>
                        <a asp-controller="Sportivs" asp-action="Index" class="management-link">
                            <i class="fas fa-users"></i> Players
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Organizaties" asp-action="Index" class="management-link">
                            <i class="fas fa-building"></i> Organizations
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Rosters" asp-action="Index" class="management-link">
                            <i class="fas fa-list"></i> Rosters
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Eveniments" asp-action="Index" class="management-link">
                            <i class="fas fa-calendar"></i> Events
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Bilets" asp-action="Index" class="management-link">
                            <i class="fas fa-ticket-alt"></i> Tickets
                        </a>
                    </li>
                    <li>
                        <a asp-controller="RosterEveniments" asp-action="Create" class="management-link">
                            <i class="fas fa-link"></i> Assign Roster to Event
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
